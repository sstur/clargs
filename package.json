{
  "name": "@sstur/clargs",
  "version": "1.5.0",
  "description": "A fully-typed schema-based parser for command line args",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint --max-warnings 0 \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit -p .",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest",
    "clean": "rm -rf build coverage",
    "copy-files": "cp README.md build/ && lean-package > build/package.json",
    "build": "yarn clean && tsc -p tsconfig.build.json && rollup -c && rm -rf build/dts && yarn copy-files && prettier --write build",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "eslint": "^8.20.0",
    "eslint-config-xt": "^1.7.0",
    "expect-type": "^0.13.0",
    "jest": "^28.1.3",
    "lean-package": "^1.0.0",
    "prettier": "^2.7.1",
    "rollup": "^2.77.0",
    "rollup-plugin-dts": "^4.2.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": "xt",
    "ignorePatterns": [
      "/lib"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-imports": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "license": "ISC"
}
